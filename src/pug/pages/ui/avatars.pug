				pre.
					+avatar("../../../img/avatars/photo-big.jpg", "Емельян Казаков")

			.section-ui
				.title-medium.mb-20 Аватар маленький
				+avatar("../../../img/avatars/avatar-1.jpg", "Юрий Ключевский", "avatar--small")
