	include ../../sections/ui-nav-inside-ui.pug

	.main-wrapper
		.container.container--left
			.title.mb-0 Аватарки

			.section-ui
				.title-medium.mb-20 Аватар большой
				+avatar("../../../img/avatars/photo-big.jpg", "Емельян Казаков")
