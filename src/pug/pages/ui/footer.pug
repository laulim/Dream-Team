extends ../../layouts/ui-layout.pug

block variables
	- var title = 'Подвал сайта - UI-kit и HTML фреймворк - Документация'
	- var pageClass = 'body--dashboard'

block content
	include ../../sections/ui-nav-inside-ui.pug

	.main-wrapper
		.container.container--left
			.title Подвал сайта

		p Футер подключаем из отдельной файла, через include

		.section-ui.mt-20
			.title-medium Подключение из файла
		pre include ../../sections/footer.pug

		.section-ui
			.title-medium Разметка

	footer.footer
		.container
			.row
				.col-4
					p © Dream-Team
					p Создано с &nbsp
						i.fas.fa-heart
						| &nbsp в #[a(class='footer-link__style' href='#' target='_blank') WebCademy.ru] в 2017 году
				.col-4
					nav
						ul.footer-nav
							li.footer-nav__item
								a(href="#") Главная
							li.footer-nav__item
								a(href="#") Обо мне
							li.footer-nav__item
								a(href="#") Работы
							li.footer-nav__item
								a(href="#") Блог
							li.footer-nav__item
								a(href="#") Контакты
				.col-4
					.footer__icons
						+linkIcons("#", "fa-vk")
						+linkIcons("#", "fa-twitter")
						+linkIcons("#", "fa-youtube")
						+linkIcons("#", "fa-instagram")
						+linkIcons("#", "fa-facebook-f")